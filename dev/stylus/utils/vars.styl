@import 'utils/fonts.styl'
@import 'utils/mixins.styl'

// ЦВЕТА
$main_color = #f8a80f
$auxiliary_txt_color = #443133
$main_txt_color = #333333
$main_bg_color = #fff

// РАЗМЕРЫ
$baseFontSize = 16px

// ШРИФТЫ
$font_main_regular = "RobotoRegular",-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif

// КНОПКИ
.main_btn
	min-width: 272px
	height: 50px
	padding: 0 5px
	border: 1px solid transparent
	background-color: $main_color
	text-transform: none
	font(#fff, 16, $font_main_regular)
	text-transform uppercase
	display: inline-block
	text-align: center
	line-height: 45px
	transition: 0.5s
	&:hover
		background-color: #333333
		color: #fff
		text-decoration: none
		outline: 0
	&:active
		background-color: #333333
		color: #fff
		text-decoration: none
		outline: 0
	&:focus
		background-color: #333333
		color: #fff
		text-decoration: none
		outline: 0
	&:hover i
		left: 10px
	i
		margin-left: 10px
		position: relative
		left: 0
		transition: 0.5s


.flex-center
	display: flex
	align-items: center
	justify-content: center