// Секция top-section
.top-section
	text-align: center
	min-height: 700px
	overflow: hidden
	position: relative
	height: 100vh
	.container
		height: 100%
		min-height: 100%
	&__slider-control
		width: 70px
		height: 70px
		display: flex
		align-items: center
		justify-content: center
		position: absolute
		bottom: 60px
		left: 0
		right: 0
		margin: auto
		opacity: 0.9
		background-color: white
		border-radius: 35px
		z-index: 10
	&__title
		width: 670px
		position: relative
		margin-top: 233px
		padding: 55px 60px 60px 60px
		background-color: #ffffff
		text-align: left
		h1
			width: 470px
			margin-bottom: 30px
			display: inline-block
		p
			width: 470px
			fz(28)
			color: $main_txt_color
	&__links-wrap
		position: absolute
		top: 50%
		right: -356px
		transform translateY(-50%)
		a
			min-width: 200px
			margin-right: 30px
			&:last-of-type
				min-width: 230px
				margin-right: 0
	.swiper-wrapper
		box-sizing border-box
	.swiper-button-prev,.swiper-button-next
		display: inline-block
		position: relative
		background-image: none
		width: inherit
		height: inherit
		top: inherit
		left: inherit
		right: inherit
		margin: 0
		user-select: none
		&:hover i
			color: $main_color
		i
			font-size: 26px
			transition: 0.5s
	.swiper-button-prev
		margin-right: 10px
	.swiper-slide
		background-size: cover!important
		&:nth-of-type(1)
			background: url(../img/header_bg.jpg) no-repeat
		&:nth-of-type(2)
			background: url(../img/header_bg2.jpg) no-repeat
// Секция our_advantages
.our-advantages
	background-color: #f2f2f2
	padding-top: 60px
	padding-bottom: 30px
	.our-advantages__item
		min-height: 160px
		margin-bottom: 30px
		padding-top: 20px
		padding-left: 25px
		padding-right: 25px
		box-shadow: 0 6px 15.5px 1.5px rgba(51, 51, 51, 0.1)
		background-color: #fff
		p
			margin-top: 15px
			font-size: 16px
			font-family $font_ProximaNovaLight
			line-height: 1.2
			text-align: center
		.our-advantages__img
			margin-bottom: 20px
			text-align: center
.-main-pattern-bg
	background: #fff url(../img/main-pattern-bg.png) left top repeat
// Секция .we-do
.we-do
	background-color: #fff
	overflow: hidden
	&__inner-wrap
		min-height: 470px
		display: flex
		align-items: center
		position: relative
	&__title
		width: 300px
		height: 220px
		padding-left: 30px
		position: relative
		display: flex
		align-items: center
	&__slider
		width: 1350px
		overflow: hidden
		position: absolute
		top: 0
		left: 300px
	&__slider-navigation
		position: absolute
		top: 60%
		left: 30px
		.button-next,.button-prev
			display: inline-block
			cursor: pointer
			font-size: 26px
			transition: 0.5s
			&:hover
				color: $main_color
		.button-prev
			margin-right: 20px
	.swiper-slide
		img
			max-width 100%
			height auto
	.swiper-slide__img
		width: 100%
		position: relative
		&:hover .swiper-slide__title-slide
			top: 50%
			transform translateY(-50%)
	.swiper-slide__title-slide
		width: 100%
		height: 50px
		line-height: 50px
		position: absolute
		top: 100%
		transform translateY(-100%)
		background-color: rgba(0,0,0,0.6)
		color: #fff
		text-transform uppercase
		font-size: 18px
		text-align: center
		font-family: $font_ProximaNovaLight
		transition: 0.5s
// Секция .rates
.rates
	background-color: #fff
	padding-top: 30px
	padding-bottom: 30px
	&__item
		height: 250px
		margin-bottom: 15px
		position: relative
		display: flex
		flex-direction: column
		justify-content: center
	&__item-description
		padding: 20px 40px 20px 20px
		box-shadow: 0 6px 15.5px 1.5px rgba(51, 51, 51, 0.1),0 -1px 15.5px 1.5px rgba(51, 51, 51, 0.1)
		h3
			font-size: 26px
			margin-bottom: 10px
			span
				color: $main_color
		p
			margin-bottom: 15px
			font-family: $font_ProximaNovaLight
	&__item-price
		width: 250px
		font-size: 22px
		span
			color: $main_color
	&__item-img-block
		position: absolute
		top: 15px
		right: 15px
		z-index: 1
	&__item-img-bg
		width: 270px
		height: 250px
		background-color: #f2f2f2
		position: absolute
		top: 0
		right: 0
		z-index: 0
	&__item-price-wrap
		display: flex
		align-items: center
