// Секция intermediate
.intermediate
	text-align: center
	background-color: #00b6f4
	padding-top: 50px
	padding-bottom: 50px
	.intermediate__title
		max-width: 650px
		margin: auto
		color: #052243
		h3
			margin: 0
			text-transform: uppercase
			fz(24)
			color: #052243
	.intermediate__wrap
		margin-top: 40px
		form
			.intermediate__item
				margin-bottom: 20px
				input
					width: 100%
					display: inline-block
					border: 1px solid #a2b6c9
					background: #fff
					color: #43637f
					height: 40px
					padding: 0 0 0 9px
					&::-webkit-input-placeholder
						color: #43637f
					&:-moz-placeholder
						color: #43637f
					&::-moz-placeholder
						color: #43637f
					&:-ms-input-placeholder
						color: #43637f
				input[type=submit]
					background: #fff
					color: #43637f

