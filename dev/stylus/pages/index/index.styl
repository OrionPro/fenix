// Секция top-section
.top-section
	text-align: center
	min-height: 760px
	height: 100vh
	background: url(../img/header_bg.jpg) no-repeat
	background-size: cover
	.container
		height: 100%
		min-height: 100%
		.row
			height: 100%
			min-height: 100%
			flex-direction: column
	&__slider-control
		width: 70px
		height: 70px
		margin-bottom: 60px
		opacity: 0.9
		background-color: white
		border-radius: 35px
	&__title
		width: 670px
		position: relative
		margin-top: 233px
		padding: 55px 60px 60px 60px
		margin-bottom: auto
		background-color: #ffffff
		text-align: left
		p
			fz(28)
			color: $main_txt_color
	&__links-wrap
		position: absolute
		top: 50%
		right: -375px
		transform translate(-50%,0)
		a
			margin-right: 30px
			&:last-of-type
				margin-right: 0
// Секция our_advantages
.our-advantages
	min-height: 630px
	background-color: #fff
	padding-top: 75px
	.our-advantages__title
		margin-bottom: 10px
		text-align: center
		h2
			color: #626262
			text-align: center
			font-size: 35px
	.our-advantages__item
		margin-bottom: 30px
		min-height: 230px
		h3
			font-size: 26px
			text-align: center
		p
			margin-top: 15px
			fz(16)
			line-height: 1.2
			text-align: center
		.our-advantages__img
			text-align: center
			i
				fz(72)
				color: #00b6f4
// Секция main_content
.main-content
	text-align: center
	.owl-carousel.owl-drag .owl-item
		min-height: 300px
		background-color: #00b6f4
		display: flex
		align-items: center
		justify-content: center
	.swiper-container
		width: 100%
		height: 300px
		.swiper-slide
			display: flex
			align-items: center
			justify-content: center
	.select2-wrap
		width: 200px
		margin: auto
// Секция intermediate
.intermediate
	text-align: center
	background-color: #00b6f4
	padding-top: 50px
	padding-bottom: 50px
	.intermediate__title
		max-width: 650px
		margin: auto
		color: #052243
		h3
			margin: 0
			text-transform: uppercase
			fz(24)
			color: #052243
	.intermediate__wrap
		margin-top: 40px
		form
			.intermediate__item
				margin-bottom: 20px
				input
					width: 100%
					display: inline-block
					border: 1px solid #a2b6c9
					background: #fff
					color: #43637f
					height: 40px
					padding: 0 0 0 9px
					&::-webkit-input-placeholder
						color: #43637f
					&:-moz-placeholder
						color: #43637f
					&::-moz-placeholder
						color: #43637f
					&:-ms-input-placeholder
						color: #43637f
				input[type=submit]
					background: #fff
					color: #43637f

